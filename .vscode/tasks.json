{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "projectName",
            "type": "promptString",
            "description": "输入 Bazel 项目名称（例如 highly-toxic-water）",
            "default": "highly-toxic-water"
        }
    ],
    "tasks": [
        {
            "label": "Bazel Build",
            "type": "shell",
            "command": "bazelisk",
            "args": [
                "build",
                "@//${input:projectName}"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Run Server",
            "type": "shell",
            "command": "bazelisk",
            "args": [
                "run",
                "//${input:projectName}:server"
            ],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Build and Run",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Bazel Build",
                "Bazel Run Server"
            ],
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}