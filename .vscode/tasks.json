{
    "version": "2.0.0",
    "inputs": [
        {
            "id": "projectName",
            "type": "promptString",
            "description": "输入 Bazel 项目名称",
            "default": "highly-toxic-water"
        }
    ],
    "tasks": [
        {
            "label": "Bazel Build",
            "type": "shell",
            "command": "bazelisk build //Localization-Resource-Pack && bazelisk build //${input:projectName} & if exist .bazel\\datapack rmdir /s /q .bazel\\datapack",
            "args": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Run Server",
            "type": "shell",
            "command": "bazelisk build //Localization-Resource-Pack && bazelisk run //${input:projectName}:server & if exist .bazel\\datapack rmdir /s /q .bazel\\datapack",
            "args": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Bazel Upload Modrinth",
            "type": "shell",
            "command": "bazelisk build //Localization-Resource-Pack && bazelisk run //${input:projectName}:upload_modrinth & if exist .bazel\\datapack rmdir /s /q .bazel\\datapack",
            "args": [],
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": [
                        "/d",
                        "/c"
                    ]
                }
            },
            "group": "none",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
